<form action="http://localhost:3000/cat_rental_requests" method="post">
  <label for="cat_to_rent">Choose Cat To Rent</label>
  <!-- dropdown -->
  <select name="cat_rental_request[cat_id]" id="cat_to_rent">
    <!-- `brown`, if selected, is the value that will be submitted to
         the server; user is displayed "Brown" as the choice -->
         <% @cats.each do |cat| %>
          <option value = <%= cat.id %>> <%= cat.name %></option>
         <% end  %>
  </select>
  <br>

  <label for="start_date">Start Date</label>
  <input type='date' name='cat_rental_request[start_date]' id='start_date' >
  <br>
  <label for="end_date">End Date</label>
  <input type='date' name='cat_rental_request[end_date]' id='end_date' >
  <br>

  <br>

  <input type="submit" value="Create cat">
</form>
